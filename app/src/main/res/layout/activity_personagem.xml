<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".Activities.PersonagemActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Name:" />

        <TextView
            android:id="@+id/textViewHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Height:" />

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Gender:" />

        <TextView
            android:id="@+id/textViewMass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Mass:" />

        <TextView
            android:id="@+id/textViewHairColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Hair Color:" />

        <TextView
            android:id="@+id/textViewSkinColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Skin Color:" />

        <TextView
            android:id="@+id/textViewEyeColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Eye Color:" />

        <TextView
            android:id="@+id/textViewBirthYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Birth Year:" />

        <TextView
            android:id="@+id/textViewHomeworld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Homeworld:" />

        <TextView
            android:id="@+id/textViewSpecies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="Species:" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>